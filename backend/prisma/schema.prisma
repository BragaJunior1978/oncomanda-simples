generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  price       Float
  available   Boolean     @default(true)
  orderItems  OrderItem[]
}

model Table {
  id     Int    @id @default(autoincrement())
  number Int    @unique
  status String @default("LIVRE") // LIVRE, OCCUPIED, AWAITING_PAYMENT
  orders Order[]
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  name      String
  role      String   @default("GARCOM") // GARCOM, COZINHA, ADMIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  tableId   Int
  userId    Int
  total     Float
  status    String   @default("PENDING") // PENDING, READY, DELIVERED, CLOSED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // CAMPO CORRIGIDO: Adicionado readyAt
  readyAt   DateTime? // Marca quando o pedido ficou pronto (Opcional, pois só é preenchido depois)
  
  user      User     @relation(fields: [userId], references: [id])
  table     Table    @relation(fields: [tableId], references: [id])
  items     OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  price     Float
  product   Product @relation(fields: [productId], references: [id])
  order     Order   @relation(fields: [orderId], references: [id])
}